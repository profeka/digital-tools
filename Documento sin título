<script>
    // Función para sanitizar el texto y generar el ID
    function createId(text) {
        if (!text) return '';
        // Eliminar tildes y caracteres especiales, reemplazar espacios con guiones
        return text.normalize("NFD").replace(/[\u0300-\u036f]/g, "")
                   .toUpperCase().replace(/[^A-Z0-9]/g, '');
    }

    document.getElementById('evaluationForm').addEventListener('submit', function(event) {
        event.preventDefault();
        generateCode();
    });

    function generateCode() {
        // 1. Obtener datos de identificación
        const evaluator = document.getElementById('evaluatorName').value.trim();
        const team = document.getElementById('teamName').value.trim();
        
        // 2. Obtener puntuaciones
        const scoreE = document.getElementById('scoreEtica').value;
        const scoreC = document.getElementById('scoreCalidad').value;
        const scoreCr = document.getElementById('scoreCritica').value;
        
        // 3. Crear identificadores únicos y simplificados
        const evalParts = evaluator.split(' ').filter(p => p.length > 0);
        let evalID = '';
        if (evalParts.length >= 2) {
            // Inicial del nombre y 3 primeras del apellido (limpio)
            evalID = evalParts[0].charAt(0) + createId(evalParts[evalParts.length - 1]).substring(0, 3);
        } else if (evalParts.length === 1) {
             evalID = createId(evalParts[0]).substring(0, 4);
        } else {
            evalID = 'ANON';
        }
        
        // Tres primeras letras (limpias) del nombre del equipo
        const teamID = createId(team).substring(0, 3);

        // Fecha en formato DDMMAA
        const date = new Date();
        const dd = String(date.getDate()).padStart(2, '0');
        const mm = String(date.getMonth() + 1).padStart(2, '0');
        const yy = String(date.getFullYear()).slice(-2);
        const dateID = dd + mm + yy;

        // 4. Generar el código final
        // FORMATO: EVALUADOR_EQUIPO_FECHA_PUNTUACIONES
        const finalCode = `${evalID}-${teamID}-${dateID}-${scoreE}${scoreC}${scoreCr}`;

        // 5. Mostrar el resultado
        document.getElementById('generatedCode').textContent = finalCode;
        document.getElementById('result').style.display = 'block';

        // Opcional: Desplazar la vista al resultado
        document.getElementById('result').scrollIntoView({ behavior: 'smooth' });
    }
</script>

